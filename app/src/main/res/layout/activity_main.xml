<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <EditText
        android:id="@+id/id"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Please Enter Your ID"
        android:text="" />

    <TextView
        android:id="@+id/nbstep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btn_daily"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start Daily Tracker" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Term of use" />
    <Button
        android:id="@+id/btn_agree"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="I have read the Terms of Use and give my agreement " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="97dp"
            android:layout_height="89dp"
            android:layout_weight="1"
            android:src="@drawable/occitanielogo" />

        <ImageView

            android:layout_width="46dp"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:src="@drawable/mineslogo" />

        <ImageView

            android:layout_width="97dp"
            android:layout_height="89dp"
            android:layout_weight="1"
            android:src="@drawable/universitelogo" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Icons made by Freepik from www.flaticon.com" />

